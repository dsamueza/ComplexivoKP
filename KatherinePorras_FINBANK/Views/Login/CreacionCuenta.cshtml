
@{
    ViewBag.Title = "CreacionCuenta";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<!-- Automatic element centering -->
<div class="lockscreen-wrapper">
    <div class="lockscreen-logo">
        <a href="../../index2.html"><b>FIN</b>BANK</a>
    </div>
    <!-- User name -->
    <!-- START LOCK SCREEN ITEM -->
    <div class="lockscreen-item">
        <!-- lockscreen image -->
        <div class="lockscreen-image">
            <img src="~/Content/Plugins/dist/img/user1-128x128.jpg" alt="User Image">
        </div>
        <!-- /.lockscreen-image -->
        <!-- lockscreen credentials (contains the form) -->
        <form class="lockscreen-credentials">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Nombre" disabled value="@ViewBag.datosUsuario" style="    background-color: white;">
                <div class="input-group-append">

                    <a class="btn" href="@Url.Action("Index", "Login")"><i class="fa fa-arrow-right text-muted" style=" margin-top: 10px;"></i></a>
                </div>
            </div>
        </form>
        <!-- /.lockscreen credentials -->
    </div>
    <!-- /.lockscreen-item -->
    @if (ViewBag.estado == 1)
    {
        <div class="help-block text-center">
            El usuario se creo correctamente. Revisar el mail de confirmacion que fue enviado al correo de registrado.
        </div>
    }
    @if (ViewBag.estado == 2)
    {
        <div class="help-block text-center">
            La información creada ya se encuentra registrada.
        </div>
    }
    @if (ViewBag.estado == 0)
    {
        <div class="help-block text-center">
            Existó un problema en el servidor. Intentalo mas tarde
        </div>
    }
    <div class="text-center">
        <a href="@Url.Action("Index", "Login")">Dar click en la flecha para continuar.</a>
    </div>
    <div class="lockscreen-footer text-center">
        Copyright &copy; 2019 <b><a href="#" class="text-black">FinBank</a></b><br>
        Derechos reservados.
    </div>
</div>
<!-- /.center -->