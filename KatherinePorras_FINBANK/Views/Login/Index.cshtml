@model KatherinePorras_FINBANK.Modelo.Login
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";


}

<div class="login-box">
    <div class="login-logo">
        <a href="#">
    
            <img src="~/Content/image/finbank.png"    style=" width: 100px;" />
</div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Ingrese su usuario y contraseña</p>
            <form asp-controller="Login" asp-action="Index" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <div class="form-group has-feedback">
                    <input type="email" class="form-control" placeholder="Email" name="mail">
                    <span class="fa fa-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Password" name="contraseña">
                    <span class="fa fa-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="checkbox icheck">
                            <label>

                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Ingrese</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <!-- /.social-auth-links -->
            <p class="mb-0">
                <a href="register.html" class="text-center"></a>
                <a  href="@Url.Action("RegistroUsuario", "Login")">Registrate!</a>
            </p>
            @if (ViewBag.mensajeLogin != "") {
            <div class="row">
                <div class="col-12">
                    <div class="alert alert-warning alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h5><i class="icon fa fa-warning"></i> Mensaje!</h5>
                        @ViewBag.mensajeLogin
                    </div>
                </div>
                <!-- /.col -->
                <!-- /.col -->
            </div>
            }   
        </div>
        <!-- /.login-card-body -->
    </div>
</div>